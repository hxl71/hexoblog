// Custom styles.
body {
  margin: 0;
  background: #f9f9f9;
}
//导航菜单
.menu .menu-item a:hover {
    background: #428bca;
	color: #eee;
	//Mozilla内核
	-moz-transition:background-color 1s ease-in;
	//Webkit内核
	-webkit-transition:background-color 1s ease-in;
	//Opera
	-o-transition:background-color 1s ease-in;
	//W3C 标准
	transition:background-color 1s ease-in;
}
.header-inner {
    padding: 5px 0 5px;
}
// 主页文章添加阴影效果
.post {
   margin-top: 30px;
   margin-bottom: 30px;
   padding: 25px;
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
 }
 
.posts-expand .post {
    margin-top: 60px;
}

//修改文章内链接文本样式
.post-body p a {
	color: #0593d3;
	border-bottom: none;
	&:hover {
		color: #0477ab;
		text-decoration: underline;
	}
}
//修改不在文章内的链接文本样式
.link-blue{
	color: #f36;
	&:hover {
		color: #f00;
	}
}
//修改文章内code样式
